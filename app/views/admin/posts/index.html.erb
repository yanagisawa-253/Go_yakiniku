<div class="container">
  <div class="row">
    <!--一覧のbox-->
    <div class="new-buttom col-sm-12">
      <%= link_to '+', new_admin_post_path, class: "btn btn-success mb-3 mt-3" %>
    </div>
    <div class="post-box col-sm-10">
      <div class="">
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>部位名</th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
          <tr>
            <td><%= attachment_image_tag post, :image, :fill, 50, 50 %></td>
        　　　　　　　　<td><%= link_to post.post_name, admin_post_path(post.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
      </div>
    </div>
  </div>
</div>