<div class="container">
  <div class="row">
    <div class="post-search col-sm-12 mt-5 mx-auto">
      <h1>気になるお肉について調べてみてください</h1>
      <%= search_form_for @q do |f| %>
      <%= f.search_field :post_name_cont %>

      <%= f.submit "検索", class: "btn btn-primary mt-2 mb-2" %>
      <% end %>
    </div>
    <!--アイテム３表示-->
    <div class="post-box col-sm-12">
      <% @posts.each do |post| %>
      <div class="col-4">
        <%= link_to post_path(post.id) do %>
          <%= attachment_image_tag post, :image, :fill, 250, 200 %>
        　　<p><%= post.post_name %></p>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>