<div class="container">
  <div class="row">
    <div class="post-font-box col-sm-8 mx-auto">
      <h1 class="post-font-saerch mt-5"><i class="fas fa-search"></i>　<strong>あなたが気になるお肉はありますか？</strong></h1>
    </div>
    <!--検索バーの設置-->
    <div class="post-search col-sm-6 pl-5 mt-3 mx-auto">
      <%= search_form_for @q do |f| %>
      <%= f.search_field :post_name_cont, :size => "30"  %>
      <%= f.submit "検索", class: "btn btn-primary mt-2 mb-3 ml-4 " %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <!--アイテム３表示-->
      <% @posts.each do |post| %>
        <%= link_to post_path(post.id) do %>
        <div class="post_box col-12">
          <%= attachment_image_tag post, :image, :fill, 80, 80 %>
          <p><%= post.post_name %></p>
        </div>
        <% end %>
      <% end %>
  </div>
</div>