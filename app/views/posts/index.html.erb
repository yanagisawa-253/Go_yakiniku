<div class="container">
  <div class="row">
    <!--アイテム３表示-->
    <div class="post-box col-sm-12">
      <% @posts.each do |post| %>
      <div class="col-4">
        <%= link_to post_path(post.id) do %>
          <%= attachment_image_tag post, :image, :fill, 250, 200 %>
        　　<p><%= post.post_name %></p>
        <% end %>
      </div>
      <% end %>
    </div>
  </div>
</div>